{
  "name": "api",
  "version": "0.0.0",
  "description": "Mono Web API",
  "main": "./dist/index.js",
  "type": "module",
  "scripts": {
    "delete-build-cache": "npx rimraf tsconfig.tsbuildinfo dist",
    "start": "node ./dist/index.js",
    "start:watch": "npx nodemon ./dist/index.js",
    "build": "npx tsc",
    "build:watch": "npx tsc -w",
    "build:full": "npm run delete-build-cache && npx tsc",
    "serve": "npm run build:watch & npm run start:watch",
    "lint": "npx eslint",
    "lint:fix": "npx eslint --fix",
    "format": "npx prettier --write 'src/**/*.ts'",
    "format:ci": "npx prettier --check 'src/**/*.ts'",
    "graphiql": "npx ruru -SP -p 4000 -e http://localhost:3000/gql",
    "db:run-migrations": "npx tsx ./src/dal/kysely/migration-script.ts",
    "scripts:create-kysely-migration": "npx tsx ./src/scripts/create-kysely-migration.ts",
    "scripts:create-http-controller": "npx tsx ./src/scripts/create-http-controller.ts",
    "codegen": "npx tsx ./src/codegen/codegen-runner/codegenRunner.ts"
  },
  "engines": {
    "node": ">=20.0.0"
  },
  "dependencies": {
    "arctic": "^2.2.1",
    "cors": "^2.8.5",
    "dotenv": "^16.4.5",
    "express": "^4.19.2",
    "graphql": "^16.9.0",
    "graphql-http": "^1.22.1",
    "kysely": "^0.27.4",
    "lucia": "^3.2.2",
    "openai": "^4.58.1",
    "oslo": "^1.2.1",
    "pg": "^8.12.0",
    "picocolors": "^1.0.1",
    "simpler-fetch": "^10.4.0",
    "ulid": "^2.3.0",
    "vue": "^3.5.3",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@eslint/js": "^9.8.0",
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/pg": "^8.11.6",
    "eslint": "^9.8.0",
    "eslint-plugin-perfectionist": "^3.9.1",
    "globals": "^15.9.0",
    "nodemon": "^3.1.4",
    "prettier": "^3.3.3",
    "rimraf": "^6.0.1",
    "ruru": "^2.0.0-beta.13",
    "tsx": "^4.16.5",
    "typescript": "^5.5.4",
    "typescript-eslint": "^8.0.0"
  }
}