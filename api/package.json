{
  "name": "api",
  "version": "0.0.0",
  "description": "Mono Web API",
  "main": "./dist/index.js",
  "type": "module",
  "scripts": {
    "delete-build-cache": "npx rimraf tsconfig.tsbuildinfo dist",
    "delete-mock-sqlite-db-files": "npx rimraf sqlite-mock-dbs/*.db",
    "start": "node ./dist/index.js",
    "build:server": "npx tsc",
    "build": "npm run delete-build-cache && npm run build:server",
    "serve": "npx tsx watch ./src/index.ts",
    "typecheck": "npx tsc --noEmit",
    "typecheck:watch": "npx tsc -w --noEmit",
    "lint": "npx eslint",
    "lint:fix": "npx eslint --fix",
    "format": "npx prettier --write 'src/**/*.ts'",
    "format:ci": "npx prettier --check 'src/**/*.ts'",
    "graphiql": "npx ruru -SP -p 4000 -e http://localhost:3000/gql",
    "db:migrate": "npx tsx ./src/dal/kysely/migration-cli/kyselyMigrationCli.ts",
    "scratchpad": "npx tsx ./src/scripts/scratchpad.ts",
    "scratchpad-watch": "npx tsx watch ./src/scripts/scratchpad.ts",
    "scripts:entschema-codegen": "npx tsx ./src/entschema/codegen/entSchemaCodegen.ts",
    "scripts:create-ent": "npx tsx ./src/scripts/create-ent.ts",
    "scripts:create-async-job": "npx tsx ./src/scripts/create-async-job.ts",
    "scripts:create-http-controller": "npx tsx ./src/scripts/create-http-controller.ts",
    "ngrok": "ngrok http http://localhost:3000",
    "codegen": "npx tsx ./src/codegen/codegenTool/codegenCli.ts"
  },
  "engines": {
    "node": ">=22.0.0"
  },
  "dependencies": {
    "@react-router/express": "^7.7.1",
    "@react-router/node": "^7.7.1",
    "@types/react": "^19.0.2",
    "@types/react-dom": "^19.0.2",
    "arctic": "^2.2.1",
    "better-auth": "^1.1.15",
    "convert-unknown-catch-to-error": "^1.0.3",
    "cors": "^2.8.5",
    "datetime-ts": "^1.0.0",
    "dotenv": "^16.4.5",
    "express": "^4.19.2",
    "graphql": "^16.9.0",
    "graphql-http": "^1.22.1",
    "isbot": "^5",
    "kysely": "^0.27.4",
    "lucia": "^3.2.2",
    "nice-types": "^1.0.1",
    "openai": "^4.58.1",
    "oslo": "^1.2.1",
    "pg": "^8.12.0",
    "picocolors": "^1.0.1",
    "react": "^19.1.1",
    "react-dom": "^19.1.1",
    "react-router": "^7.7.1",
    "safety-number-one": "^1.0.2",
    "simpler-fetch": "^10.4.0",
    "sqlite": "^5.1.1",
    "sqlite3": "^5.1.7",
    "ulid": "^2.3.0",
    "vue": "^3.5.3",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@eslint/js": "^9.8.0",
    "@react-router/dev": "^7.7.1",
    "@tailwindcss/vite": "^4.1.11",
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/pg": "^8.11.6",
    "eslint": "^9.8.0",
    "eslint-plugin-perfectionist": "^3.9.1",
    "globals": "^15.9.0",
    "nodemon": "^3.1.4",
    "prettier": "^3.3.3",
    "rimraf": "^6.0.1",
    "ruru": "^2.0.0-beta.13",
    "tailwindcss": "^4.1.11",
    "tsx": "^4.16.5",
    "typescript": "^5.5.4",
    "typescript-eslint": "^8.0.0",
    "vite": "^7.0.6",
    "vite-tsconfig-paths": "^5.1.4"
  }
}